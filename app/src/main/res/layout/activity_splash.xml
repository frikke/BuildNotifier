<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/splash_root"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/splash_bg"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="@id/splash_icon"
    app:layout_constraintEnd_toEndOf="@id/splash_icon"
    app:layout_constraintStart_toStartOf="@id/splash_icon"
    app:layout_constraintTop_toTopOf="@id/splash_icon"
    android:src="@drawable/background_splash"/>
  <ImageView
    android:id="@+id/splash_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="centerCrop"
    app:srcCompat="@drawable/ic_launcher_foreground"/>
</androidx.constraintlayout.widget.ConstraintLayout>